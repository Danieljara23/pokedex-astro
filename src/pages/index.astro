---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import pokemonData from "../data/pokemon.json";

const { pokemon } = pokemonData;
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="search-bar">
      <input type="text" placeholder="Search a pokemon" />
      <input type="button" value="Search" />
    </div>
    <div class="filters-bar">
      <div class="filter">
        <select name="types" id="types">
          <option value="">Type</option>
          <option value="fire">Fire</option>
          <option value="grass">Grass</option>
          <option value="water">Water</option>
          <option value="bug">Bug</option>
          <option value="electric">Electric</option>
          <option value="poison">Poison</option>
          <option value="fighting">Fighting</option>
          <option value="ground">Ground</option>
        </select>
      </div>
      <div class="filter">
        <select name="weaknesses" id="weaknesses">
          <option value="">Weaknesses</option>
          <option value="fire">Fire</option>
          <option value="grass">Grass</option>
          <option value="water">Water</option>
          <option value="bug">Bug</option>
          <option value="electric">Electric</option>
          <option value="poison">Poison</option>
          <option value="fighting">Fighting</option>
          <option value="ground">Ground</option>
        </select>
      </div>
      <div class="filter">
        <select name="order" id="order">
          <option value="">Order by</option>
          <option value="ascendant">A-Z</option>
          <option value="descendant">Z-A</option>
        </select>
      </div>
      <div class="filter buttons">
        <button class="reverted">Clean Filters</button>
        <button>Apply Filters</button>
      </div>
    </div>

    <div class="cards">
      {
        pokemon.map((pokemonItem) => (
          <Card
            type={pokemonItem.type[0]}
            name={pokemonItem.name}
            pokemonIndex={pokemonItem.num}
            imageUrl={pokemonItem.img}
          />
        ))
      }
    </div>
  </main>
</Layout>

<style>
  .search-bar {
    margin: 0 40px 40px;
    display: flex;
    justify-content: center;
    gap: 10px;

    & input {
      width: 90%;
      padding: 16px;
      border: none;
      box-shadow: 1px 1px 4px lightgray;
      border-radius: 8px;
    }

    & input[type="button"] {
      border: none;
      padding: 16px;
      width: 10%;
      cursor: pointer;
      background-color: var(--blue-800);
      color: var(--white);
      font-weight: 500;
    }
  }

  .filters-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin: 20px;

    & select {
      border: none;
      box-shadow: 1px 1px 4px lightgray;
      padding: 10px;
      border-radius: 5px;
    }

    & .buttons {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 20px;
    }

    & button {
      border: 1px solid transparent;
      padding: 10px 16px;
      cursor: pointer;
      background-color: var(--blue-800);
      color: var(--white);
      font-weight: 500;
      border-radius: 8px;

      &.reverted {
        color: var(--blue-800);
        background-color: var(--white);
        border: 1px solid var(--blue-800);
      }
    }
  }

  .cards {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
  }
</style>
